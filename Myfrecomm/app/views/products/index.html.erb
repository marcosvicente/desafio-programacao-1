<p id="notice"><%= notice %></p>

<h1><%= t('listing_products') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('purchaser_name') %></th>
      <th><%= t('item_description') %></th>
      <th><%= t('item_price') %></th>
      <th><%= t('purchase_count') %></th>
      <th><%= t('merchant_address') %></th>
      <th><%= t('merchant_name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.purchaser_name %></td>
        <td><%= product.item_description %></td>
        <td><%= product.item_price %></td>
        <td><%= product.purchase_count %></td>
        <td><%= product.merchant_address %></td>
        <td><%= product.merchant_name %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div id="new-button">
  <%= link_to t("new_url"), new_product_path %>
</div>
